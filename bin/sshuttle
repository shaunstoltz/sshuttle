#!/bin/sh

docker run \
    --cap-add NET_ADMIN \
    --interactive="$([ -t 0 ] && echo "true" || echo "false")" \
    --net host \
    --rm \
    --tty="$([ -t 0 ] && echo "true" || echo "false")" \
    --volume /etc/localtime:/etc/localtime:ro \
    --volume /etc/timezone:/etc/timezone:ro \
    --volume "${HOME}:/root:ro" \
    "${IMAGE:-timonier/sshuttle}:${TAG:-latest}" sshuttle "$@"
